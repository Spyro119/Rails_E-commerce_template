<!DOCTYPE html>
<html>
  <head>
    <title>DyfreshWebserver</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <head lang="fr">
    <meta charset="utf-8" />
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <!-- mobile settings -->
    <meta name="viewport" content="width=device-width, maximum-scale=1, initial-scale=1, user-scalable=0" />
    <!--[if IE]><meta http-equiv='X-UA-Compatible' content='IE=edge,chrome=1'><![endif]-->
     
  </head>

	<body class="smoothscroll enable-animation">
    <!-- Loading animation --> 
		<%# <!-- PRELOADER --> %>
		<div id="preloader">
			<div class="inner">
				<span class="loader"></span>
			</div>
		</div><!-- /PRELOADER --> 

    <!-- ALERT -->
    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
	  <script> 
	  
	  </script>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>
    <!-- /ALERT -->
    <script>var  plugin_path = '/assets/plugins/';</script>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  <%# Header %>
  <div id="header" class="navbar-toggleable-md sticky clearfix">

				<!-- TOP NAV -->
				<header id="topNav">
					<div class="container">
  
						<!-- Logo -->
						<a class="logo float-left" href="<%root_url%>">
						<%# Logo height : 96px  %>
							<%# <img src="assets/images/_smarty/logo_light.png" alt="" /> %> 
						</a>
						<div class="navbar-collapse collapse float-right nav-main-collapse ">
							<nav class="nav-main">
								<ul id="topMain" class="nav nav-pills nav-main">
								<li class="dropdown">
									<a class="dropdown-toggle"> Nouveauté </a>
									<ul class="dropdown-menu">

									<!-- Items created within a week -->
									<% if Product && Category %>
									<% time = 1.week.ago %>
									<% new_products = Product.where(:created_at => time...Time.now).order('created_at DESC')%>
									<% new_products.each do |products|%>
										<li><%= link_to products.titre, product_path(products.id) %> </li>
										<%end%>
										<li><%= link_to "Toutes nos nouveautés", products_path(time: time) %> </li>
										<%else%>
										<li> Items coming soon !</li>
										<%end%>
									</ul>
								</li>
								<li class="dropdown">
									<a class="dropdown-toggle" href="#"> Men </a>
									<ul class="dropdown-menu">
										<% if Product && Category %>
										 <% category = Array.new %>
										<% products_for_man = Product.where(sexe: "Men") 
										 products_for_man.each do |products|  
										 products.category_ids.uniq.each do |uniq|
											 puts " uniq ID #{uniq}"
											 category.push(uniq)
											 end
											 test = category.uniq
										end %>
										<% 
										category.uniq.each do |uniqId| 
										@category = Category.find(uniqId)%>
										<li><%= link_to @category.name, category_path(id: uniqId, sexe: "Men") %></li>
										<%end%>
										<%else%>
										<li> Items coming soon !</li>
										<%end%>
									</ul>

								</li>
								<li class="dropdown">
									<a class="dropdown-toggle"> Women </a>
									<ul class="dropdown-menu">
									<!-- Item categories Femme-->
									<% if Product && Category %>
										 <% category = Array.new %>
										<% products_for_woman = Product.where(sexe: "women") 
										 products_for_woman.each do |products|  
										 products.category_ids.uniq.each do |uniq|
											 puts " uniq ID #{uniq}"
											 category.push(uniq)
											 end
											 test = category.uniq
										end %>
										<% 
										category.uniq.each do |uniqId| 
										@category = Category.find(uniqId)%>
										<li><%= link_to @category.name, category_path(id: uniqId, sexe: "Women") %></li>
										<%end%>
										<% else %>
										<li> Items coming soon !</li>
										<%end%>
									</ul>
									

								</li>
								<%# if User is logged_in  %>

								<% if current_user %>
									<li class="dropdown">
										<a class="dropdown-toggle">Mon Compte</a>
										<ul class="dropdown-menu">
                          					<li> <%= link_to 'Modifier mon compte', edit_user_registration_path  %> </li> 
                          					<li> <%= link_to "Déconnection", destroy_user_session_path, method: :delete %> </li>
										</ul>
									</li>

								<% else %>

									<li><%= link_to 'Se connecter', pages_login_url %></li>

								<%end%>

								<%# If admin is logged_in %>
								<% if current_user &&  current_user.is_admin? %>
									<li><a href="/admin"> Admin </a></li>
								<% end %>
                  </div>
                </div>
              </div>
    <%= yield %>
    
  </body>
</html>
