
	<body class="smoothscroll enable-animation">
			<div class="row">
				<div class="container">
					<div class="row">
						<div class="col-md-6 offset-md-3">
							<div>
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "m-100"}) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>
                <div class="clearfix">
                  <%# first_name %>
                  <div class="form-group">
                    <%= f.text_field :first_name, placeholder: "Prénom", autocomplete: "first_name", :class => 'form-control', :required => true %>
                  </div>
                  <%# last_name %>
                  <div class="form-group">
                    <%= f.text_field :last_name, placeholder: "Nom", autocomplete: "family-name", :class => 'form-control', :required => true %>
                  </div>
                  <%# username%>
                  <div class="form-group">
                    <%= f.text_field :username, placeholder: "Identifiant", autocomplete: "username", :class => 'form-control' %>
                  </div>
								  <%# email %>
                  <div class="form-group">
                    <%= f.email_field :email, placeholder: "Identifiant/email", autocomplete: "email", :class => 'form-control', :required => true %>
                  </div>
                  <%# password %>
                  <div class="form-group">
                    <%= f.password_field :password, placeholder: "Mot de passe (#{@minimum_password_length} caractères minimum)", autocomplete: "new-password" , :class => 'form-control', :required => true %>
                  </div> 
                  <%# password confirmation %>
                  <div class="form-group">
                    <%= f.password_field :password_confirmation, placeholder: "Confirmation du mot de passes", autocomplete: "new-password", :class => 'form-control', :required => true %>
                  </div>
								</div>
              <div class="mt-30 text-center">
                <%= f.submit "Enregistrer", :class => 'btn btn-primary' %>
              </div>
              <div class="mt-10 text-center">
                <%= link_to 'Se connecter', new_user_session_path, :class => "btn btn-primary" %>
              </div>
              <% end %>
							</div>
						</div>
					</div>
					
				</div>
			</div>
